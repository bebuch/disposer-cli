	/disposer_module//log
	/disposer//disposer
	:
	<include>$(bitmap)/include
	<linkflags>-lpng
	;

lib decode_bbf
	:
	decode_bbf.cpp
	/disposer_module//log
	/disposer//disposer
	:
	<include>$(bitmap)/include
	;

lib encode_bbf
	:
	encode_bbf.cpp
	/disposer_module//log
	/disposer//disposer
	:
	<include>$(bitmap)/include
	;

lib encode_png
	:
	encode_png.cpp
	/disposer_module//log
	/disposer//disposer
	:
	<include>$(bitmap)/include
	<linkflags>-lpng
	;

lib encode_jpg
	:
	encode_jpg.cpp
	/disposer_module//log
	/disposer//disposer
	:
	<include>$(bitmap)/include
	<linkflags>-lturbojpeg
	;

lib camera_vimba
	:
	camera_vimba.cpp
	/disposer_module//log
	/disposer_module//vimba
	/disposer//disposer
	:
	<include>$(bitmap)/include
	<include>$(vimba)
	<toolset>gcc:<linkflags>-L$(vimba_libstdcxx)
	<toolset>clang:<linkflags>-L$(vimba_libcxx)
	<linkflags>-lVimbaC
	<linkflags>-lVimbaCPP
	;
